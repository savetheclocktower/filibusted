<%=chart :polar %>

  <%=component :axis_category %>
    size: 13
    alpha: 75
    orientation: circular
    color: 4e627c

  <%=component :axis_ticks %>
    value_ticks: 
    category_ticks: 

  <%=component :axis_value %>
    alpha: 0

  <%=component :chart_border %>
    bottom_thickness: 0
    left_thickness: 0

  <%=component :chart_grid_h %>
    alpha: 20
    thickness: 1
    type: dashed
    color: 000000

  <%=component :chart_grid_v %>
    alpha: 5
    thickness: 20
    type: solid
    color: 000000

  <%=component :chart_pref %>
    point_size: 8
    fill_shape: 1
    point_shape: circle
    grid: circular

  <%=component :chart_rect %>
    x: 60
    positive_alpha: 25
    y: 40
    height: 225
    positive_color: 008888
    width: 350

  <%=component :chart_transition %>
    delay: 0.5
    order: series
    type: zoom
    duration: 0.5

  <%=component :legend_label %>
    size: 12
    alpha: 75
    bullet: circle
    color: 4e627c
    layout: vertical

  <%=component :legend_rect %>
    x: 20
    fill_alpha: 0
    y: 100
    margin: 3
    height: 40
    width: 20

  <%=component :series_color %>
    colors: ff4400,4e627c