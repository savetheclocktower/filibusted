  <%=component :chart_rect %>
    x: 50
    positive_alpha: 0
    y: 50
    height: 200
    positive_color: 000000
    negative_color: ff0000
    negative_alpha: 0
    width: 300

  <%=component :chart_value %>
    alpha: 0

  <%=component :legend_rect %>
    x: -100
    y: -100
    margin: 10
    height: 10
    width: 10

  <%=component :series_color %>
    colors: 88dd11,ff8811,7744dd
    
  <%=component :series_explode %>
    numbers:
      - 20
      - 20
      - 10