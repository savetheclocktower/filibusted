<%=chart :scatter %>

  <%=component :axis_category %>
    size: 12
    alpha: 75
    bold: true
    orientation: horizontal
    color: 000000
    font: arial
    skip: 0

  <%=component :axis_ticks %>
    value_ticks: false
    minor_color: 222222
    minor_count: 1
    major_thickness: 1
    major_color: 000000
    position: inside
    category_ticks: true
    minor_thickness: 0

  <%=component :axis_value %>
    prefix: 
    size: 10
    alpha: 50
    max: 12
    bold: true
    separator: 
    decimals: 0
    min: 0
    color: ffffff
    font: arial
    show_min: false
    suffix: 

  <%=component :chart_border %>
    top_thickness: 1
    bottom_thickness: 2
    left_thickness: 1
    color: 000000
    right_thickness: 1

  <%=component :chart_grid_h %>
    alpha: 10
    thickness: 1
    color: 000000

  <%=component :chart_grid_v %>
    alpha: 20
    thickness: 2
    type: dotted
    color: 000000

  <%=component :chart_pref %>
    trend_thickness: 2
    point_size: 5
    trend_alpha: 20

  <%=component :chart_rect %>
    x: 75
    positive_alpha: 25
    y: 75
    height: 150
    positive_color: 000000
    negative_color: ff0000
    negative_alpha: 10
    width: 300

  <%=component :chart_value %>
    size: 12
    alpha: 75
    bold: true
    color: ffffff
    position: cursor

  <%=component :legend_label %>
    size: 12
    alpha: 50
    bold: true
    color: ffffff
    font: arial
    layout: vertical

  <%=component :legend_rect %>
    line_alpha: 0
    x: 75
    fill_alpha: 0
    y: 30
    margin: 3
    line_color: 000000
    height: 35
    fill_color: ffffff
    line_thickness: 0
    width: 10

  <%=component :series_color %>
    colors: 88ff00,ff8800
    
  <%=component :draw %>
    components:
      - <%=drawing :text %>
        alpha: 20
        size: 25
        x: 75
        y: 240
        bold: true
        color: ffffff
        height: 150
        h_align: left
        font: arial
        width: 400
        v_align: top
        text: Distance 
      - <%=drawing :text %>
        alpha: 20
        rotation: -90
        size: 25
        x: 0
        y: 225
        bold: true
        color: ffffff
        height: 60
        h_align: left
        width: 200
        v_align: bottom
        text: Score
      - <%=drawing :text %>
        alpha: 3
        rotation: -10
        size: 100
        x: 260
        y: 180
        bold: true
        color: ffffff
        text: '@'
      - <%=drawing :text %>
        alpha: 3
        rotation: 10
        size: 100
        x: 15
        y: 100
        bold: true
        color: ffffff
        text: '@'
      - <%=drawing :text %>
        alpha: 3
        rotation: 45
        size: 100
        x: 225
        y: -20
        bold: true
        color: ffffff
        text: '@'
      - <%=drawing :text %>
        alpha: 3
        rotation: -45
        size: 100
        x: 10
        y: -10
        bold: true
        color: ffffff
        text: '@'
      - <%=drawing :text %>
        alpha: 3
        rotation: 0
        size: 100
        x: 350
        y: 30
        bold: true
        color: ffffff    
        text: '@'        