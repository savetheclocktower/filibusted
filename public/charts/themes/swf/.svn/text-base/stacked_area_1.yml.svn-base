<%=chart :stacked_area %>
                
  <%=component :axis_category %>
    size: 12
    alpha: 75
    bold: true
    orientation: horizontal
    color: 000000
    font: arial
    skip: 0
  <%=component :axis_value %>
    steps: 6
    prefix: 
    size: 10
    alpha: 60
    bold: true
    separator: 
    decimals: 0
    color: ffffff
    font: arial
    show_min: false
    suffix: 

  <%=component :chart_border %>
    top_thickness: 1
    bottom_thickness: 2
    left_thickness: 1
    color: 000000
    right_thickness: 1

  <%=component :chart_grid_h %>
    alpha: 10
    thickness: 1
    color: 000000

  <%=component :chart_rect %>
    x: 50
    positive_alpha: 30
    y: 75
    height: 175
    positive_color: 88ff88
    negative_color: ff0000
    negative_alpha: 10
    width: 320

  <%=component :chart_transition %>
    delay: 0
    order: series
    type: slide_down
    duration: 0.75

  <%=component :chart_value %>
    prefix: 
    as_percentage: false
    alpha: 90
    size: 10
    bold: true
    separator: 
    decimals: 0
    color: ff8800
    font: arial
    position: center
    suffix: 

  <%=component :legend_label %>
    size: 13
    alpha: 50
    bullet: circle
    bold: true
    color: ffffff
    font: arial
    layout: vertical

  <%=component :legend_rect %>
    line_alpha: 0
    x: 60
    fill_alpha: 10
    y: 85
    margin: 3
    line_color: 000000
    height: 40
    line_thickness: 0
    width: 10

  <%=component :legend_transition %>
    delay: 0
    type: dissolve
    duration: 1

  <%=component :series_color %>
    colors: 844648,4d4d4d,5a4b6e
    
  <%=component :draw %>   
    components:         
      - <%=drawing :text %>
        color:    '000066'
        alpha:    5
        rotation: 0
        bold:     true
        size:     45
        x:        0
        y:        -15
        width:    200
        height:   50
        h_align:  left
        v_align:  top
        text:     report
        
      - <%=drawing :text %>
        transition: dissolve
        delay:      0
        duration:   1
        color:    ffffff
        alpha:    15
        rotation: -5
        bold:     true
        size:     60
        x:        10
        y:        -10
        width:    400
        height:   150
        h_align:  center
        v_align:  middle
        text:     stacked regions    