<%=chart :floating_bar %>
  <%=component :axis_category %>
    size: 10
    alpha: 90
    color: eebb66

  <%=component :axis_ticks %>
    value_ticks: false
    minor_color: 222222
    minor_count: 0
    major_thickness: 1
    major_color: 222222
    position: centered
    category_ticks: true
    minor_thickness: 0

  <%=component :axis_value %>
    steps: 24
    size: 8
    alpha: 50
    max: 24
    orientation: horizontal
    min: 0
    color: ffffff

  <%=component :chart_border %>
    top_thickness: 1
    bottom_thickness: 1
    left_thickness: 0
    color: 888888
    right_thickness: 0

  <%=component :chart_grid_h %>
    alpha: 5
    thickness: 10
    color: 000000

  <%=component :chart_grid_v %>
    alpha: 20
    thickness: 1
    color: 000000

  <%=component :chart_rect %>
    x: 50
    positive_alpha: 10
    y: 50
    height: 200
    positive_color: 000000
    width: 325

  <%=component :chart_value %>
    prefix: 
    as_percentage: false
    alpha: 75
    size: 10
    separator: 
    decimals: 0
    color: ffffff
    position: inside
    suffix: 

  <%=component :draw %>   
    components:         
      - <%=drawing :text %>
        color:    eeeeff
        alpha:    35
        size:     36
        x:        42
        y:        16
        width:    350
        height:   240
        h_align:  left
        text:     Work Shifts
        
  <%=component :legend_rect %>
    x: -100
    y: -100
    height: 10
    width: 10

  <%=component :series_color %>
    colors: eebb66,668899,668866,aa6688,666666
  
  <%=component :series_gap %>
    set_gap: 20
    bar_gap: 0
    
  <%=component :series_switch %>
    switch: true