<%=chart :column_threed %>

  <%=component :axis_category %>
    size: 12
    alpha: 50
    orientation: horizontal
    color: 000000
    skip: 0

  <%=component :axis_ticks %>
    value_ticks: false
    category_ticks: false

  <%=component :axis_value %>
    alpha: 0

  <%=component :chart_border %>
    top_thickness: 0
    bottom_thickness: 0
    left_thickness: 0
    right_thickness: 0

  <%=component :chart_grid_h %>
    thickness: 0

  <%=component :chart_pref %>
    rotation_x: 20
    rotation_y: 40

  <%=component :chart_rect %>
    x: -60
    positive_alpha: 0
    y: 30
    height: 240
    negative_alpha: 25
    width: 480

  <%=component :chart_value %>
    prefix: 
    as_percentage: true
    alpha: 80
    size: 10
    separator: 
    decimals: 0
    color: 000000
    hide_zero: true
    position: over
    suffix: 

  <%=component :legend_label %>
    size: 12
    alpha: 50
    bold: true
    color: 000000
    font: arial
    layout: vertical

  <%=component :legend_rect %>
    line_alpha: 0
    x: 50
    fill_alpha: 0
    y: 35
    margin: 5
    line_color: 000000
    height: 40
    fill_color: 000066
    line_thickness: 0
    width: 100

  <%=component :live_update %>
    delay: 2
    url: "/column_threed_chart/refresh_data"

  <%=component :series_color %>
    colors: 666666,768bb3
    
  <%=component :series_gap %>
    set_gap: 20
    bar_gap: 10